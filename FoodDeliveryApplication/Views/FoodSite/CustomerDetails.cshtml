@model CustomerDetails

<form method="post">
    <div class="border p-3 mt-4 container  align-self-center align-items-center" style="width:40%">

        <div style="vertical-align:middle" class="align-items-center">
           
            <h3 style="font-family:'Roboto Black', sans-serif;color:#535665;font-weight:bold;margin-top:10px">Enter Details</h3>
            <br />
            <div class="mb-3">
                <input asp-for="Address" placeholder="Address" class="form-control" style="width:100%"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

             <div class="mb-3">
                <input asp-for="PhoneNo" placeholder="Phone number" class="form-control" style="width:100%"/>
            </div>
            
            <button type="submit" class="btn " style="width : 100%;background-color:orange;border-color:orange;color:white;font-weight:bold" asp-controller="FoodSite" asp-action="PlaceOrder">PLACE ORDER</button>

           

        </div>

      
        
    </div>

</form>

